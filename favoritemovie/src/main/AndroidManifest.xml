<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riotfallen.favoritemovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.riotfallen.moviedirectory.core.READ_DATABASE" />
    <uses-permission android:name="com.riotfallen.moviedirectory.core.WRITE_DATABASE" />

    <permission
        android:name="com.riotfallen.moviedirectory.core.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.riotfallen.moviedirectory.core.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>