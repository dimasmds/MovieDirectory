<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewListItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/rimImageViewThumbnail"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:contentDescription="@string/thumbnail" />
        <LinearLayout
            android:paddingTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rimTextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/neosans"
                android:layout_marginBottom="10dp"
                android:text="@string/dummy_movie"/>
            <TextView
                android:id="@+id/rimTextViewDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:text="@string/dummy_desc"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>